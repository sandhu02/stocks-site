<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: white;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .chart-container {
            width: 90%;
            max-width: 900px;
            margin: 0 auto;
        }

        canvas {
            max-width: 100%;
            height: 500px !important;
        }

        .search-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .search-container input {
            padding: 10px;
            font-size: 16px;
            width: 250px;
            margin-right: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .search-container button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #00ff6a;
            border: none;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .search-container button:hover {
            background-color: #007b3a;
        }
    </style>
</head>
<body>

    <h1><%= title %></h1>

    <!-- Search Bar -->
    <div class="search-container">
        <form action="/seasonality" method="GET">
            <input type="text" name="stockSymbol" placeholder="Enter Stock Symbol" value="<%= stockSymbol %>" />
            <button type="submit">Search</button>
        </form>
    </div>

    <div class="chart-container">
        <canvas id="seasonalityChart"></canvas>
    </div>

    <script>
        const config = JSON.parse('<%- JSON.stringify(chartConfig) %>');
        new Chart(document.getElementById('seasonalityChart'), config);
    </script>

</body>
</html>
